{
  "branches": [
    "main",
    {
      "name": "+(feat|fix|perf|refactor)/*",
      "prerelease": true
    }
  ],
  "plugins": [
    [
      "@semantic-release/commit-analyzer",
      {
        "preset": "conventionalcommits",
        "releaseRules": [
          { "type": "feat", "release": "minor" },
          { "type": "fix", "release": "patch" },
          { "type": "perf", "release": "patch" },
          { "type": "docs", "release": "patch" },
          { "type": "style", "release": false },
          { "type": "refactor", "release": "patch" },
          { "type": "test", "release": false },
          { "type": "build", "release": "patch" },
          { "type": "ci", "release": false },
          { "type": "deps", "release": "patch" },
          { "type": "go", "release": "patch" },
          { "breaking": true, "release": "major" },
          { "type": "feat", "scope": "api", "release": "minor" },
          { "type": "fix", "scope": "deps", "release": "patch" },
          { "type": "go", "scope": "mod", "release": "patch" }
        ]
      }
    ],
    "@semantic-release/release-notes-generator",
    "@semantic-release/changelog",
    [
      "@semantic-release/git",
      {
        "assets": ["CHANGELOG.md"],
        "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ],
    [
      "@semantic-release/github",
      {
        "assets": [
          { "path": "nix-foundry-linux-amd64", "label": "Linux x64 Binary" },
          { "path": "nix-foundry-darwin-amd64", "label": "macOS x64 Binary" },
          { "path": "nix-foundry-darwin-arm64", "label": "macOS ARM64 Binary" }
        ],
        "successComment": true,
        "failComment": true,
        "failTitle": "Release Failed",
        "labels": ["release"],
        "releasedLabels": ["released"]
      }
    ],
    [
      "@semantic-release/exec",
      {
        "prepareCmd": "GOOS=linux GOARCH=amd64 go build -o nix-foundry-linux-amd64 && GOOS=darwin GOARCH=amd64 go build -o nix-foundry-darwin-amd64 && GOOS=darwin GOARCH=arm64 go build -o nix-foundry-darwin-arm64"
      }
    ]
  ]
}
